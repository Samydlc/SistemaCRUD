@model Pionner.Models.Archivos
@{
    ViewData["Title"] = "Cargar";
}

<img src="~/images/logo.png" height="20" right="20" />

<h2>Cargar Archivos...</h2>

<div class="row">
    <div class="col-md-4">
        <form method="post" action="/Home/ShowFields" enctype="multipart/form-data">
            <div class="form-group">
                <label asp-for="Nombre" class="control-label"></label><br />
                <input asp-for="Nombre" type="text" name="fullName" class="form-control" /><br />

            </div>
            <div class="form-group">
                <label asp-for="pdf" class="control-label"></label><br />
                <input asp-for="pdf" type="file" name="pic" /><br />

            </div>
            <div class="form-group">
                <label asp-for="Imagen" class="control-label"></label><br />
                <input asp-for="Imagen" type="file" name="pica" /><br />

            </div>

            <input type="submit" value="Cargar" class="btn btn-success" />
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}